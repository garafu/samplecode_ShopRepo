<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>Shop</title>
    <%- include("../../_share/stylesheets.ejs") %>
  </head>
  <body>
    <div class="outerframe">
      
      <%- include("../../_share/navbar.ejs") %>
      
      <div class="container">
        <div class="border-bottom mt-5 mb-5">
          <h1 class="">口コミの投稿</h1>
        </div>

        <div>
          <form>
            <input type="hidden" id="shopId" name="shopId" value="<%= shopId %>" />
            <div class="form-group row">
              <label for="shopName" class="col-sm-2 col-form-label">店舗</label>
              <div class="col-sm-10">
                <input type="text" readonly class="form-control-plaintext" id="shopName" name="shopName" value="<%= shopName %>" />
              </div>
            </div>
            <div class="form-group row">
              <label class="col-sm-2 col-form-label" for="user">ユーザー</label>
              <div class="col-sm-10">
                <input type="text" readonly class="form-control" id="user" name="user" value="<%= review.user %>" />
              </div>
            </div>
            <div class="form-group row">
              <label class="col-sm-2 col-form-label" for="visit">訪問日</label>
              <div class="col-sm-10">
                <input type="text" readonly class="form-control" id="visit" name="visit" value="<%= (review.visit ? moment(review.visit).format('YYYY/MM/DD') : '') %>" />
              </div>
            </div>
            <div class="form-group row">
              <label class="col-sm-2 col-form-label" for="score">評価</label>
              <div class="col-sm-10">
                <input type="text" readonly class="form-control" id="score" name="score" value="<%= review.score %>" />
              </div>
            </div>
            <div class="form-group row">
              <label class="col-sm-2 col-form-label" for="description">本文</label>
              <div class="col-sm-10">
                <textarea readonly class="form-control" id="description" name="description" rows="5"><%= review.description %></textarea>
              </div>
            </div>
            <div class="form-group row">
              <div class="col-sm-2"></div>
              <div class="col-sm-10">
                <input type="submit" class="btn btn-primary" data-method="POST" data-action="/account/review/regist/input" value="修正" />
                <input type="submit" class="btn btn-primary" data-method="POST" data-action="/account/review/regist/execute" value="登録" />
              </div>
            </div>
          </form>
        </div>
      </div>

      <%- include("../../_share/footer.ejs") %>

    </div>
    <%- include("../../_share/javascripts.ejs") %>
    <script type="text/javascript" src="/public/javascripts/regist.js"></script>
  </body>
</html>